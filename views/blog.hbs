<!DOCTYPE html>
<html lang="en-US">
	<head>
  	{{> dependencies}}
		<link rel="stylesheet" href="css/blog.css">
  <body>
		{{> navbar}}
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-1">
        </div>
        <div class="col-sm-10">
          {{#each blogs}}
            <div class="container-fluid">
              <h2>{{title}}</h2>
							<div class="list-group-item">
								<div class="container-fluid">
									<div class="text-blog">
										<p>{{body}}</p>
										<p>Posted: {{stats.birthed.pretty}} EST</p>
										{{{ifEdited stats.birthed.pretty stats.edited.pretty}}}
									</div>
								</div>
							</div>
            </div>
          {{/each}}
        </div>
        <div class="col-sm-1">
        </div>
      </div>
      <div class="row">
        <div class="col-sm-1">
        </div>
        <div class="col-sm-10">
          <div class="buffer">
          </div>
        </div>
        <div class="col-sm-1">
        </div>
      </div>
    </div>
		{{> footer}}
  </body>
</html>
